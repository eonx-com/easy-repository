{
    "name": "loyaltycorp/easy-repository",
    "description": "Provides an easy way to implement the Repository Design Pattern in your applications",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "^1.2",
        "doctrine/orm": "^2.6",
        "loyaltycorp/easy-pagination": "^0.10.5",
        "laravel/lumen-framework": "^5.5",
        "vlucas/phpdotenv": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "LoyaltyCorp\\EasyRepository\\": "src",
            "StepTheFkUp\\EasyRepository\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LoyaltyCorp\\EasyRepository\\Tests\\": "tests",
            "StepTheFkUp\\EasyRepository\\Tests\\": "tests"
        }
    },
    "suggest": {
        "doctrine/orm": "To use the Doctrine ORM implementation",
        "illuminate/database": "To use the Illuminate Eloquent implementation",
        "loyaltycorp/easy-pagination": "To use pagination within your repositories"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    }
}
